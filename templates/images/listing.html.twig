{% extends 'base.html.twig' %}

{% block content %}
  <div class="class="card" style="width:80%; background:#fff ; margin:auto; margin-top:15px"">
   <div class="card-body">
        <h2>Listing</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Tag</th>
            <th scope="col">Provider</th>
            <th scope="col">Added on</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        {% set index = 1 %}
        {% for row in data %}
            <tr>
              <th scope="row">{{index}}</th>
              <td> 
                <img height="100" width="100" src="{{ row.url }}" />
              </td>
              <td>{{ row.name }}</td>
              <td>{{ row.tag }}</td>
              <td>{{ row.provider }}</td>
              <td>{{ row.created_on|date('d-m-Y') }}</td>
              <td>
                <a class="btn btn-warning">Edit</a>
                <a class="btn btn-danger">Delete</a>
              </td>
            </tr>
          {% set index = index+1 %}
          {% endfor %}
        </tbody>
      </table>
      <a class="btn btn-success" href="/new/">
        Add new
      </a>
    </div>
  </div>
{% endblock %}   
